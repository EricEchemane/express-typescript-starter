{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES3",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "constants/*": [
                "src/constants/*"
            ],
            "controllers/*": [
                "src/controllers/*"
            ],
            "db/*": [
                "src/db/*"
            ],
            "middlewares/*": [
                "src/middlewares/*"
            ],
            "routes/*": [
                "src/routes/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}